{
    "name": "Polyglot Translator",
    "description": "Download your translations as a text file.",
    "version": "1.0",
    "permissions": [
      "downloads", 
      "<all_urls>"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icons": { 
        "16": "/icons/icon16.png",
        "32": "/icons/icon32.png",
        "48": "/icons/icon48.png",
       "128": "/icons/icon128.png" 
      }
    },
    "icons": { 
      "16": "/icons/icon16.png",
      "32": "/icons/icon32.png",
      "48": "/icons/icon48.png",
     "128": "/icons/icon128.png" 
    },
    "manifest_version": 2
}